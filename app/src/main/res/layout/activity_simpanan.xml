<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_200"
    tools:context=".menu.SimpananActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingRight="@dimen/_1sdp"
                    android:paddingLeft="@dimen/_1sdp"
                    android:paddingTop="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_1sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/_13sdp"
                            android:paddingLeft="@dimen/_13sdp"
                            android:paddingRight="@dimen/_13sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:orientation="horizontal"
                            android:layout_weight="2">
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_6sdp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No. Anggota :"
                                    android:textSize="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_8sdp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Nama Anggota :"
                                    android:textSize="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_8sdp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tgl. Gabung :"
                                    android:textSize="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_8sdp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="@dimen/_1sdp"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/_8sdp"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:paddingLeft="@dimen/_6sdp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/no_anggota"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_8sdp"/>
                                <TextView
                                    android:id="@+id/nama_anggota"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_8sdp"/>
                                <TextView
                                    android:id="@+id/tgl_gabung"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textSize="@dimen/_12sdp"
                                    android:paddingBottom="@dimen/_8sdp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_8sdp"
                    android:text="Balance Overview"
                    android:textSize="@dimen/_14sdp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_marginTop="@dimen/_13sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:gravity="top">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/colorPrimary"
                                android:paddingRight="@dimen/_1sdp"
                                android:paddingLeft="@dimen/_1sdp"
                                android:paddingTop="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_13sdp"
                                android:paddingBottom="@dimen/_1sdp">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:background="@color/white"
                                    android:paddingTop="@dimen/_6sdp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingTop="@dimen/_13sdp"
                                        android:paddingLeft="@dimen/_13sdp"
                                        android:paddingRight="@dimen/_13sdp"
                                        android:paddingBottom="@dimen/_4sdp">
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:paddingRight="@dimen/_4sdp"
                                        android:paddingLeft="@dimen/_4sdp"
                                        android:paddingBottom="@dimen/_13sdp">
                                        <TextView
                                            android:id="@+id/total_saldo"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rp. 0,00"
                                            android:textStyle="bold"
                                            android:textColor="@color/grey_700"
                                            android:textSize="@dimen/_20sdp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/grey_400"
                                    android:paddingRight="@dimen/_1sdp"
                                    android:paddingLeft="@dimen/_1sdp"
                                    android:paddingTop="@dimen/_1sdp"
                                    android:layout_marginTop="@dimen/_13sdp"
                                    android:paddingBottom="@dimen/_1sdp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:background="@color/colorPrimary"
                                        android:padding="@dimen/_6sdp">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Total Simpanan"
                                            android:textColor="@color/white"
                                            android:textSize="@dimen/_13sdp"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/ly_deskripsi"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_13sdp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold"
                            android:text="Rincian Simpanan"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_8sdp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="7"
                                android:paddingBottom="@dimen/_8sdp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/grey_800"
                                        android:text="Simpanan Pokok"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:layout_gravity="end"
                                    android:gravity="end">
                                    <TextView
                                        android:id="@+id/simpanan_pokok"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/grey_800"
                                        android:text="Rp. 10.000.000,00"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="7"
                                android:paddingBottom="@dimen/_8sdp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/grey_800"
                                        android:text="Simpanan_wajib"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:layout_gravity="end"
                                    android:gravity="end">
                                    <TextView
                                        android:id="@+id/simpanan_wajib"
                                        android:textColor="@color/grey_800"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12sdp"
                                        android:text="Rp. 5.000.000,00"/>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="7"
                                android:paddingBottom="@dimen/_8sdp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/grey_800"
                                        android:text="Simpanan Sukarela"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="1dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="4"
                                    android:layout_gravity="end"
                                    android:gravity="end">
                                    <TextView
                                        android:id="@+id/simpanan_sukarela"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/grey_800"
                                        android:text="Rp. 5.000.000,00"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/teal_300"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ly_no_data"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Tidak ada data"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/grey_600"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Segera lakukan transaksi sekarang"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/grey_500"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>